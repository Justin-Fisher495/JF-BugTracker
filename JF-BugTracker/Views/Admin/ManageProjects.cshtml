@model IEnumerable<JF_BugTracker.Models.ViewModels.ManageProjectUsersViewModel>
@{
    ViewBag.Title = "ManageProjectUsers";
}
<style>
    .cntlWide {
        width: 100%;
        max-width: 100%;
        margin: 2%
    }

    .lstBoxTall {
        height: 100px
    }

    .tablemanageroles {
        margin: 5px
    }
</style>



<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3>Manage Users On Projects</h3>
        </div>
        <div class="crad-body">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-12">@Html.ListBox("UserIds", null, new { @class = "cntlWide lstBoxTall" })</div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">@Html.DropDownList("Project", null, "-- Select One --", new { @class = "cntlWide" })</div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">@Html.DropDownList("ProjectManager", null, "-- Select One --", new { @class = "cntlWide" })</div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary cntlWide">Submit</button>
                            </div>
                        </div>

                    }
                </div>
            </div>

        </div>

    </div>


    <div class="card">
        <div class="card-header">Users</div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <table class="table tablemanageroles" id="usersOnProjectTable">
                        <thead>
                            <tr>

                                <th>
                                    @Html.DisplayName("User Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Projects")
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(model => user.UserDisplayName)
                                    </td>
                                    <td>
                                        @foreach (var project in user.Projects)
                                        {
                                            @project.Name
                                        }
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>












        </div>
    </div>
</div>



@section Scripts {
    <script>
        $('#usersOnProjectTable').DataTable();
    </script>

}

