@model IEnumerable<JF_BugTracker.Models.ManageRolesViewModel>
@{
    ViewBag.Title = "ManageRoles";
}
<style>
    .cntlWide {
        width: 100%;
        max-width: 100%;
        margin: 2%
    }

    .lstBoxTall {
        height: 100px
    }

    .tablemanageroles {
        margin: 5px
    }

    .managerolescards {
        position: !important absolute;
            left: 16.25em;
    }
    .managerolescards2{
         position: !important absolute;
            left: 16em;
    }
</style>



<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card managerolescards">
                    <div class="card-header"><h2>Manage Roles</h2></div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="row">
                                <div class="col-md-12">@Html.ListBox("UserIds", null, new { @class = "cntlWide lstBoxTall" })</div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">@Html.DropDownList("Role", null, "-- Select One --", new { @class = "cntlWide" })</div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary cntlWide">Submit</button>
                                </div>
                            </div>
                        }
                    </div>


                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card managerolescards2">
                <div class="card-header"><h3>Current Users</h3></div>
                <div class="card-body">
                    <table class="table tablemanageroles" id="userTable1">
                        <thead>
                            <tr>

                                <th>
                                    @Html.DisplayName("User Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Role")
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(model => user.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => user.RoleName)
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>




                </div>
            </div>
        </div>


    </div>
</section>
@section Scripts{

    <script>
        $("#userTable1").DataTable();
    </script>

}


