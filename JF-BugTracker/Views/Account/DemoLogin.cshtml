
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>
        Jägerwanzen | Log in
    </title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link href="~/Content/all.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link href="~/Content/icheck-bootstrap.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Content/adminlte.min.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body>

    <div class="row text-center">
        <div class="card">
            <div class="card-header">
                <i class="fab fa-jedi-order"></i>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("emailKey", "DemoAdminEmail")
                    <p>
                        Login as a user in the Admin Role
                    </p>
                    <button type="submit" class="btn btn-sm btn-dark">Login</button>


                }
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <i class="fab fa-jedi-order"></i>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("emailKey", "DemoPMEmail")
                    <p>
                        Login as a user in the Project Manager Role
                    </p>
                    <button type="submit" class="btn btn-sm btn-dark">Login</button>


                }
            </div>
        </div>
    </div>

    <div class="row text-center">
        <div class="card">
            <div class="card-header">
                <i class="fab fa-jedi-order"></i>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("emailKey", "DemoDeveloperEmail")
                    <p>
                        Login as a user in the Developer Role
                    </p>
                    <button type="submit" class="btn btn-sm btn-dark">Login</button>


                }
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <i class="fab fa-jedi-order"></i>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("emailKey", "DemoSubmitterEmail")
                    <p>
                        Login as a user in the Submitter Role
                    </p>
                    <button type="submit" class="btn btn-sm btn-dark">Login</button>


                }
            </div>
        </div>
    </div>




    <!-- jQuery -->
    <script src="~/Scripts/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Scripts/adminlte.min.js"></script>
</body>
</html>
