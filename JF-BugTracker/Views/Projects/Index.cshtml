        {
            <div class="col-md-4">
                <a href="@Url.Action("Details","Projects", new { id = project.Id })">
                    <div class="info-box">
                        <span class="info-box-icon bg-gradient-secondary elevation-1"><i class="fas fa-project-diagram"></i></span>

